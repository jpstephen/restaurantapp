@model Items

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Item</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Item Name</label>
                <input type="text" class="form-control mb-3" asp-for="Name">
                <span asp-validation-for="Name" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Price">Designation</label>
                <input type="text" class="form-control mb-3" asp-for="Price">
                <span asp-validation-for="Price" class=" alert-danger"></span>
            </div>
        </div>



        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="Items" asp-action="Index" class="btn btn-lg btn-warning p-2">Back</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}